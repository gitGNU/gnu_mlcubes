HELP=
MODE=USER
OS=
PREFIX=/usr

help () {
    echo "$0 [options]"
    echo "  -h, --help            Show this help"
    echo "      --dev             Configure for developers"
    echo "      --nt              Force configuration for nt"
    echo "      --posix           Force configuration for posix"
    echo "      --prefix=PREFIX   Set prefix"
}

parse () {
    if [ $# -gt 0 ]
    then
        case "$1" in
            --dev)
                MODE=DEV;;
            --nt)
                OS=nt;;
            --posix)
                OS=posix;;
            --prefix=*)
                PREFIX="$(echo "$1" | sed -e 's/^--prefix=//')";;
            -h | --help)
                HELP=yes;;
            *)
                echo "unknown option: $1" >&2
                help >&2
                false;;
        esac
        shift
        parse "$@"
    fi
}

parse "$@"

if [ -n "$HELP" ]
then
    help
else

    if [ -z "$OS" ]
    then
        UNAME="$(uname)"
        case "$UNAME" in
            "Linux" | "OpenBSD")
                OS=posix;;
            "CYGWIN_NT-6.1")
                OS=nt;;
            *)
                echo "unknown OS: $UNAME" >&2
                false;;
        esac
    fi

    echo "MODE:   $MODE"
    echo "OS:     $OS"
    echo "PREFIX: $PREFIX"

    rm -f unconfigure
    (
        echo "#!/bin/sh -e"
        echo ""
        echo "rm -f unconfigure .depend.mk .config.mk"
    ) >unconfigure
    chmod 0000 unconfigure
    chmod +rw unconfigure
    chmod -w+x unconfigure

    rm -f .config.mk
    (
        echo "PREFIX=$PREFIX"
        echo "OS=$OS"
        echo "MODE=$MODE"
        if [ "$MODE" = USER ]
        then
            echo "CHECKINSTALL=true\$(EXEEXT)"
        else
            echo "CHECKINSTALL=false\$(EXEEXT)"
        fi
    ) >.config.mk
    chmod 0000 .config.mk
    chmod +rw .config.mk
    chmod -w .config.mk

    rm -f .depend.mk
    echo >.depend.mk
    make depend >/dev/null

fi
